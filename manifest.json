{
    "manifest_version": 3,
    "name": "YouTube Summarizer using OpenAI",
    "version": "0.2",
    "description": "Summarize YouTube videos using OpenAI API.",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": ["*://*.youtube.com/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }